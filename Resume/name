	<body>

		<table class='table-list'>
			Table
			<tr>
				<td>1</td>
				<td>1</td>
				<td>1</td>
				<td>1</td>
				<td>1</td>
			</tr>
			<tr>
				<td>2</td>
				<td>2</td>
				<td>2</td>
				<td>2</td>
				<td>2</td>
			</tr>
			<tr>
				<td>3</td>
				<td>3</td>
				<td>3</td>
				<td>3</td>
				<td>3</td>
			</tr>
			<tr>
				<td>4</td>
				<td>4</td>
				<td>4</td>
				<td>4</td>
				<td>4</td>
			</tr>
		</table>


		<script>
			let table	= document.querySelector('.table-list');

			let tr = document.createElement('tr');
			for (let i = 1; i <= 5; i += 1) {
				let td = document.createElement('td');
				td.innerHTML = '5';
				tr.appendChild(td);
			}
			table.appendChild(tr);

			let trs = document.querySelectorAll('tr');
			console.log(trs);
			for (let tr of trs) {
				let td = document.createElement('td');
				let anchor = document.createElement('a');
				anchor.innerHTML = ' Ссылка для удаления ряда';
				td.appendChild(anchor);
				tr.appendChild(td);

				anchor.addEventListener('click', function(event) {
					parent = tr.parentElement;
					console.log(parent);
					tr.parentElement.removeChild(tr);
					event.preventDefault();
				});
			}


			
		</script>
	</body>
</html>
